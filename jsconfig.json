{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "lib": ["ESNext"],
        "typeRoots": ["./.vendor/types"],
    },
    "exclude": ["node_modules"]
}